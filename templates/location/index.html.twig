{% extends "dashboard/index.html.twig" %}
{% block content %}
    <main>
        <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
            <div class="container-fluid px-4">
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon">
                                    <i data-feather="eye"></i>
                                </div>
                                 Liste des Reservations                                                                                                                 
                            </h1>
                        </div>
                        <div class="col-12 col-xl-auto mb-3">
                            <a class="btn btn-sm btn-light text-primary" href="{{ path('location_new') }}">
                                <i class="me-1" data-feather="user-plus"></i>
                                Ajouter Reservation                            
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main page content-->
        <div class="container-fluid px-4">
            <div class="card">
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>
                                    Numéro
                                </th>
                                <th>
                                    Date Reservation
                                </th>
                                <th>
                                    Date Retour
                                </th>
                                <th>
                                    Montant
                                </th>
                                <th>
                                    Avance
                                </th>
                                <th>
                                    Etat
                                </th>
                                <th>
                                    Client
                                </th>
                                <th>
                                    Vehicule
                                </th>
                                <th>
                                    actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for  location in  locations %}
                                <tr>
                                    <td>
                                        {{  location.Num }}
                                    </td>
                                    <td>
                                        {{  location.DateLoc ? location.DateLoc|date('Y-m-d') : '' }}
                                    </td>
                                    <td>
                                        {{  location.DateRetour ? location.DateRetour|date('Y-m-d') : '' }}
                                    </td>
                                    <td>
                                        {{  location.Montant }} DT
                                    </td>
                                    <td>
                                        {{  location.Avance }} DT
                                    </td>
                                    <td>
                                        {{  location.Etat }}
                                    </td>
                                    <td>
                                       <a class="text-muted me-3" href="{{ url }}/client/{{ location.Client }}">{{ location.Client.Name }}</a>
                                    </td>
                                    <td>
                                       <a class="text-muted me-3" href="{{ url }}/vehicule/{{ location.Vehicule }}">{{ location.Vehicule.Modele }} : {{ location.Vehicule.Matricule }}</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="{{ path('location_show', {'id':  location.id}) }}">
                                            <i data-feather="eye"></i>
                                        </a>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="{{ path('location_edit', {'id':  location.id}) }}">
                                            <i data-feather="edit"></i>
                                        </a>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2">
                                            {{ include('location/_delete_form.html.twig') }}
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="17">
                                        aucune entrée
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
{% endblock %}