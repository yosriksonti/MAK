{% extends "dashboard/index.html.twig" %}




{% block body %}
<!DOCTYPE html>

<title>Promo index</title>
    <h1>Promo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pourcentage</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>
                <td>{{ promo.id }}</td>
                <td>{{ promo.Pourcentage }}</td>
                <td>{{ promo.Code }}</td>
                <td>
                    <a href="{{ path('app_promo_show', {'id': promo.id}) }}">show</a>
                    <a href="{{ path('app_promo_edit', {'id': promo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_promo_new') }}">Create new</a>
{% endblock %}
